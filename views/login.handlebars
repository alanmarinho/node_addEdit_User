<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container d-flex align-items-center justify-content-center flex-column ">
  <h1>Fazer Login</h1>
  <form action="/login" method="post" class="d-flex align-items-center justify-content-center flex-column p-2 m-2 ">
    <div class="form-group d-flex flex-column ">
      <label for="user">Usuário</label>
      <input type="text" name="user" id="user" placeholder="Usuário" class="form-control" required>
    </div>
    <div class="form-group d-flex flex-column">
      <label for="email">Idade</label>
      <input type="password" name="password" id="password" placeholder="Senha" class="form-control" required>
    </div>
    <input type="submit" value="login" class="btn btn-primary btn-success">
    {{#if message}}
    <div class="alert alert-warning m-3" role="alert">
      {{message}}
    </div>
    {{/if}}
  </form>
</div>